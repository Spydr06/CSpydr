type Pair: struct<K, V> {
    key: K,
    val: V
};

fn new_pair<K, V>(key: K, val: V): Pair {
    let pair: Pair<K, V> = malloc(sizeof(Pair<K, V>));
    pair.key = key;
    pair.val = val;

    return pair;
}

