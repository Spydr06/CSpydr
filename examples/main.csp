import "string.csp";
import "vec.csp";
import "libc/memory.csp";
import "libc/stdlib.csp";
import "libc/stdio.csp";
import "libc/stdint.csp";

macro message() |: init_str("Hello World") :|

type x: struct y;

fn main(argc: i32, argv: &&char): i32 {   
    let string: str = message!;
    str_append(string, '!');

    puts(str_lit(string));

    atexit(| | => {
        puts("exiting...");
    });

    <- 0;
}

